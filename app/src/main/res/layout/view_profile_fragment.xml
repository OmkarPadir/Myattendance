<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profLayout"
        android:layout_width="359dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/profileMobiletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profileMobet"
            android:layout_alignBottom="@+id/profileMobet"
            android:layout_alignEnd="@+id/profileAddresstv"
            android:text="Mobile:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="TextView"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/yeartv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/depttv"
            android:layout_alignBottom="@+id/depttv"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/depttv"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/divtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/semtv"
            android:layout_alignBottom="@+id/semtv"
            android:layout_alignStart="@+id/yeartv"
            android:text="TextView"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/profileAddet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileEmailet"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/editProfileButton"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/saveProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editProfileButton"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/rollnotv"
            android:onClick="onSaveProfileClicked"
            android:text="Save" />

        <TextView
            android:id="@+id/semtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/depttv"
            android:layout_below="@+id/depttv"
            android:layout_marginTop="29dp"
            android:text="TextView"
            android:textSize="24sp" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onEditProfileClicked"
            android:text="Edit"
            android:layout_below="@+id/profileMobet"
            android:layout_toStartOf="@+id/rollnotv"
            android:layout_marginTop="28dp" />

        <TextView
            android:id="@+id/profileEmailtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profileEmailet"
            android:layout_alignBottom="@+id/profileEmailet"
            android:layout_alignStart="@+id/semtv"
            android:text="Email:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/depttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textSize="24sp"
            android:layout_below="@+id/rollnotv"
            android:layout_alignStart="@+id/editProfileButton" />

        <TextView
            android:id="@+id/rollnotv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profileAddresstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profileAddet"
            android:layout_alignBottom="@+id/profileAddet"
            android:layout_alignEnd="@+id/profileEmailtv"
            android:text="Address:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/profileEmailet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profileAddet"
            android:layout_below="@+id/divtv"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/profileMobet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profileAddet"
            android:layout_alignStart="@+id/profileAddet"
            android:layout_below="@+id/profileAddet"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black" />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="202dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loadingtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progbar"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>